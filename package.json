{
  "name": "PinPoint",
  "productName": "PinPoint",
  "version": "0.2.0",
  "license": "MIT",
  "description": "Digitize your data",
  "author": "Mohamed Ismail <mismail1993@gmail.com>",
  "homepage": "https://github.com/mhismail/PinPoint",
  "repository": "https://github.com/mhismail/PinPoint",
  "keywords": [
    "pinpoint",
    "digitizer",
    "extract",
    "data"
  ],
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron main.js",
    "package": "electron-builder --dir",
    "dist": "electron-builder -w --x64 --ia32"
  },
  "build": {
    "appId": "PinPoint",
    "mac": {
      "category": "public.app.category.productivity",
      "target": "zip",
      "icon": "images/pinpoint_logo_ico.ico"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icons/"
    },
    "win": {
      "target": "nsis",
      "icon": "images/pinpoint_logo_ico.ico"
    }
  },
  "devDependencies": {
    "electron": "^5.0.13",
    "electron-builder": "^19.56.2"
  },
  "dependencies": {
    "datatables.net": "^1.10.20",
    "datatables.net-dt": "^1.10.20",
    "jquery": "^3.4.1",
    "jquery-ui": "^1.12.1",
    "regression": "^2.0.1"
  }
}
